@using Microsoft.AspNetCore.Mvc.ModelBinding
@model University.Web.Models.ViewModels.GroupsViewModels.GroupDeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete group</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberStudents)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberStudents)
        </dd>
        <dt class="col-12">
            <span asp-validation-for="NumberStudents" class="text-danger"></span>
        </dt>
    </dl>

    <form asp-action="Delete" method="post">

        <input asp-for="Id" value="@Model.Id" type="hidden"/>
        <input asp-for="CourseId" value="@Model.CourseId" type="hidden"/>
        <input asp-for="NumberStudents" value="@Model.NumberStudents" type="hidden"/>
        <input asp-for="CourseName" value="@Model.CourseName" type="hidden"/>
        <input asp-for="Name" value="@Model.Name" type="hidden"/>

        @if (Model.NumberStudents != 0)
        {
            <input type="submit" value="Delete" class="btn btn-danger" disabled="disabled"/>
        }
        else
        {
            <input type="submit" value="Delete" class="btn btn-danger"/>
        }
        |
        <a asp-action="Index" asp-controller="Group" asp-route-courseId="@Model.CourseId">Back to list of the groups</a>
    </form>
</div>